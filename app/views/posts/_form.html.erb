<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, id: :post_user_id %>
  </div>
  <div class="field">
    <%= form.hidden_field :avatar_cache %>
    <%= form.file_field :avatar %>
  </div>
  

  <div class="field">
    <%= form.label :category_id %>
    <%= form.select :category_id, Category.all.collect { |p| [p.title, p.id] }, include_blank: true, class: "" %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>
  <div class="field">
    <%= form.label :sub %>
    <%= form.text_field :sub, id: :post_sub %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.cktext_area :body, id: :post_body %>
  </div>
 

  <div class="actions">
    <%= form.submit "Publicar", class: "btn"%>
  </div>
<% end %>
