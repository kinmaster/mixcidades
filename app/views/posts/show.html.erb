<p id="notice"><%= notice %></p>

  <div class="section">

    <div class="row">
      <div class="col s12 m12 l12 center">
        <h1 class="header bold"><%= @post.title %></h1>
        <h5 class="grey-text text-darken-2"><%= @post.sub %></h5>
        <div class="divider"></div>

        <blockquote class="left">
          <p class="bold">Por <%= @post.user.name%></p>
          <p>Atualizado em <%= time_ago_in_words(@post.created_at) %></p>
          
        </blockquote>

        <div class="conteudo col s12 m12 l10 offset-l1">
          <%= image_tag(@post.avatar_url, class:"imagem")%>
          <p class=""><%= @post.body.html_safe %></p>
        </div>
      </div>
    </div>
</div>       
<div class="divider"></div>
      <div class="row">
