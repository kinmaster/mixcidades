<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col l10">
    <% if (@posts.first.category.id == 3)%>
    <h1 class="header green-text text-darken-2">Esporte</h1>
    <% else %>
      <h1 class="header red-text text-darken-2">Not√≠cias</h1>
    <% end %>
  </div>
  <div class="col l2">
    <% if can? :create, Post %>
      <%= link_to 'Postar', new_post_path, class: "btn" %>
    <% end %>
  </div> 
</div>
    <div class="divider"></div>
<div class="row">
<%= @paramss %> 
   <% @posts.each do |post| %>
    <div class="col s12 m6 l4">   
    <%= link_to post do %> 
      <div class="card medium">
        <div class="card-image image">
          <%= image_tag(post.avatar_url) %>  
        </div> 
        <div class="card-content">
          <p class="sub2 grey-text text-darken-4 card-sub"><%= post.title %></p>
          <p class="card-sub"><%= post.sub %></p>
        </div>
        <div class="card-action">
         <span class="red-text text-darken-2"><%= post.category.title%> </span> - 
         <span class="red-text text-darken-2"> <%= time_ago_in_words(post.created_at) %></span>
          
        </div> 
      </div> 
      <% end %> 
          <% if can? :destroy, Post %>
            <p><%= link_to 'Editar', edit_post_path(post), class: "btn blue darken-2 white-text" %><%= link_to 'Excluir', post, class: "btn red darken-2 white-text", method: :delete, data: { confirm: 'Are you sure?' } %></p>
          <% end %>    
    </div>
  <% end %> 
</div>