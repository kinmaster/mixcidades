<%= form_with(model: event, local: true, :html => { :multipart => true }) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="file-field input-field">
  <div class="btn">
    <span>Capa do Evento</span>
    <%= form.file_field :avatar, class: "" %>
  </div>
   <div class="file-path-wrapper">
        <input class="file-path validate" type="text" placeholder="Upload one or more files">
  </div>
</div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title %>
  </div>

  <div class="field">
    <%= form.label :date %>
    <%= form.date_field :date, id: :event_date %>
  </div>
  <div class="field">
    <%= form.label :city_id %>
    <%= form.select :city_id, City.all.collect { |p| [p.description, p.id] }, include_blank: true, class: "" %>
  </div>
   <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :event_address %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :mini1 %>
  </div>
  
    <%= form.fields_for :event_attachments do |p| %>
     <div class="field">
       <%= p.label :avatar %><br>
       <%= p.file_field :avatar, :multiple => true, name: "event_attachments[avatar][]" %>
     </div>
    <% end %>
    
<div class="field">
  <div class="switch">
  <%= form.label :role %>
    <label>
      Off
      <%= form.check_box :role %>
      <span class="lever"></span>
      On
    </label>
  </div>
 </div>

  <div class="actions">
    <%= form.submit'Publicar', class: "btn" %>
  </div>
<% end %>
