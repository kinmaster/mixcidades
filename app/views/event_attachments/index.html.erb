<p id="notice"><%= notice %></p>

<h1>Event Attachments</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_attachments.each do |event_attachment| %>
      <tr>
        <td><%= event_attachment.event.title %></td>
        <td><%= image_tag (event_attachment.avatar_url),width:"25%" %></td>
        <td><%= link_to 'Show', event_attachment %></td>
        <td><%= link_to 'Edit', edit_event_attachment_path(event_attachment) %></td>
        <td><%= link_to 'Destroy', event_attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event Attachment', new_event_attachment_path %>
