
 
<% @esportes.each do |post| %>
    <div class="col s12 m6 l3">   
    <%= link_to post do %> 
      <div class="card small">
        <div class="card-image image">
          <%= image_tag(post.avatar_url) %>  
        </div> 
        <div class="card-content">
        <p class="green-text text-darken-2"><%= post.category.title%> </p>
          <span class="sub2 activator grey-text text-darken-4"><%= post.title %></span>
        <p class="green-text text-darken-2"> <%= time_ago_in_words(post.created_at) %></p>
        </div> 
      </div> 
      <% end %>     
    </div>
<% end %> 

