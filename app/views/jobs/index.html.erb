<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Sector</th>
      <th>Capacity</th>
      <th>Title</th>
      <th>Description</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Salary</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.user %></td>
        <td><%= job.sector %></td>
        <td><%= job.capacity %></td>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.phone %></td>
        <td><%= job.email %></td>
        <td><%= job.salary %></td>
        <td><%= job.date %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

