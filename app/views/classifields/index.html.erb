<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col l10">
    <h3 class="header orange-text text-darken-2">Classifields</h3>
  </div>
  <div class="col l2">
    <% if can? :create, Classifield %>
      <%= link_to 'Anuncie', new_classifield_path, class: "btn btn-lg orange darken-2 white-text" %>
    <% end %>
  </div> 
</div>
<div class="divider orange"> </div>
<div class="row">
     <% @classifields.each do |post| %>
    <div class="col s12 m12 l4">   
    <%= link_to post do %> 
      <div class="card small">
        <div class="card-image image">
          <%= image_tag post.images[0] %>  
        </div> 
        <div class="card-content">
          <p class="sub2 activator green-text text-darken-4">R$ <%= post.value %></p>
          <span class="sub2 activator grey-text text-darken-4"><%= post.title %></span>
        </div>
         
      </div> 
      <% end %>     
    </div>
    <% end %>
</div>