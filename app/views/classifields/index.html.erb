<p id="notice"><%= notice %></p>

<h1>Classifields</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Description</th>
      <th>Value</th>
      <th>Date</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classifields.each do |classifield| %>
      <tr>
        <td><%= classifield.user %></td>
        <td><%= classifield.title %></td>
        <td><%= classifield.description %></td>
        <td><%= classifield.value %></td>
        <td><%= classifield.date %></td>
        <td><%= classifield.sale %></td>
        <td><%= link_to 'Show', classifield %></td>
        <td><%= link_to 'Edit', edit_classifield_path(classifield) %></td>
        <td><%= link_to 'Destroy', classifield, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

